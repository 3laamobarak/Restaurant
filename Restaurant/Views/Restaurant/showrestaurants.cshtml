@{
    Layout = "_Layout2";
}
@model List<Restaurant>
<a asp-action="AddRestaurant" asp-controller="Restaurant" id="openModal" class="btn btn-alert-success">Add Restaurant</a>
<br/><br/>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Mail</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.Phone</td>
            <td>@item.Mail</td>
            <td>
                <a asp-action="Edit" asp-controller="Restaurant" asp-route-id="@item.Id" style="background-color : aquamarine" class="btn btn-alert-success">Edit</a> |
                <a asp-action="Delete" asp-controller="Restaurant" asp-route-id="@item.Id" style="background-color : red" class="btn btn-warning">Delete</a>
                <a asp-action="ShowHalls" asp-controller="Hall" asp-route-id="@item.Id" style="background-color : #001f3f;color:white " class="btn btn-alert-success">Manage Halls</a>
            </td>
        </tr>
    }
</table>
<style>
    #openModal {
        margin-top: 20px;
        background-color: aquamarine;
        padding: 10px 20px;
        text-decoration: none;
        color: black;
        font-size: 16px;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    #openModal:hover {
        background-color: #4ec9b0;
    }
</style>