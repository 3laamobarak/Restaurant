@model List<Item>
<a asp-action="AddItem" asp-controller="Item" asp-route-SRID="@ViewBag.SRID" style="background-color :aquamarine" class="btn btn-alert-success">Add New Item</a>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Available</th>
        <th>Price</th>
        <th>Number of Orders</th>
        <th>ExpireDate</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Type</td>
            <td>@item.Available</td>
            <td>@item.Price</td>
            <td>@item.Amount</td>
            <td>@item.ExpireDate</td>
            <td>
                <a asp-action="Edit" asp-controller="Item" asp-route-id="@item.Id" style="background-color : aquamarine" class="btn btn-alert-success">Edit</a> |
                <a asp-action="Delete" asp-controller="Item" asp-route-id="@item.Id" style="background-color : red" class="btn btn-warning">Delete</a>
            </td>
        </tr>
    }
</table>
